    <TextView
        android:id="@+id/district_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_bg"
        android:gravity="center"
        android:onClick="onClickDistricts"
        android:text="Districts"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/comissionar_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/item_bg"
        android:gravity="center"
        android:onClick="onClickComissionariates"
        android:text="Commissionerates"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/special_units_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/item_bg"
        android:gravity="center"
        android:onClick="onClickSpecialUnits"
        android:text="Special Units"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/head_quarters_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/item_bg"
        android:gravity="center"
        android:onClick="onClickHeadQuarters"
        android:text="Head Quarters"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

